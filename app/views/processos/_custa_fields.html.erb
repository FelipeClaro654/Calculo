<div class="nested-fields">
    <div class="row">
        <div class="col-xs-2 margin-top-12">
            <%= f.input :custas_data, label: "Data",
            as: :string,
            :input_html => { :placeholder => "__/__/__",
                             :class => "calendario custas-data" }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :custas_valor, label: "Custas",
            as: :string,
            :input_html => {
                :class => "custas-valor"
            }%>
        </div>
        <div class="col-xs-2">
            <%= f.input :indice, label: "Índice Obrigação",
            as: :string,
            :input_html => {
                :disabled => true,
                :class => "custas-indice"
            }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :custas_corrigida, label: "Corrigida",
            as: :string,
            :input_html => {
                :disabled => true,
                :class => "custas-corrigida"
            }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :folhas, label: "Fls"%>
        </div>
        <div class="col-xs-1 margin-top-12">
            <%= link_to_remove_association "Remover", f,
                  :class => "btn btn-danger pull-right margin-left-5 btn-remove-autor margin-top-14 neg-margin-right-38"%>
        </div>
    </div>
    <hr>

</div>

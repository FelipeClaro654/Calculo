<% unless notice.blank? %>
<div class="alert alert-success alert-dismissible pull-right" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h6 id="notice">
        <%= notice %>
    </h6>
</div>
<% end %>

<h1>Processos</h1>

<table class="table width-percent-65">
    <thead>
        <tr>
            <th>Autor</th>
            <th>Numero</th>
            <th>Vara</th>
            <th>Data base</th>
            <th>Re</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        <% @processos.each do |processo| %>
        <tr>
            <td>
                <%= processo.processo_autor %>
            </td>
            <td><%= processo.numero %></td>
            <td><%= processo.vara %></td>
            <td><%= processo.data_base.strftime("%d/%m/%Y") %></td>
            <td><%= processo.re %></td>
            <td>
                <%= link_to 'Resumo', :controller => "processos", :action => "render_resumo", :processo_id => processo.id %>
                <%= link_to 'Editar', edit_processo_path(processo) %>
                <%= link_to 'Excluir', processo, method: :delete,
                    data: { confirm: 'Deseja excluir este processo?' }, class: "pull-right" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

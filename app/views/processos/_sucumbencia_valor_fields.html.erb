<div class="nested-fields">
    <div class="row">
        <div class="col-xs-2 margin-top-12">
            <%= f.input :sucumbencia_data, label: "Data",
            as: :string,
            :input_html => { :placeholder => "__/__/__",
                             :class => "calendario sucumbencia-data" }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :valor, label: "Sucumbência",
            as: :string,
            :input_html => {
                :class => "sucumbencia-valor"
            }%>
        </div>
        <div class="col-xs-2">
            <%= f.input :indice, label: "Índice Obrigação",
            as: :string,
            :input_html => {
                :disabled => true,
                :class => "sucumbencia-indice"
            }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :sucumbencia_corrigida, label: "Corrigida",
            as: :string,
            :input_html => {
                :disabled => true,
                :class => "sucumbencia-corrigida"
            }%>
        </div>
        <div class="col-xs-2 margin-top-12">
            <%= f.input :folhas, label: "Fls"%>
        </div>
        <div class="col-xs-1 margin-top-12">
            <%= link_to_remove_association "Remover", f,
                  :class => "btn btn-danger pull-right margin-left-5 btn-remove-sucumbencia margin-top-14 neg-margin-right-38"%>
        </div>
    </div>
    <hr>

</div>

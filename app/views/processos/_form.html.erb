<%= simple_form_for @processo, :html => {:class => ' process-form'} do |f| %>
    <% if processo.errors.any? %>
        <div class="alert alert-danger alert-dismissible pull-right" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h6>
                <%= pluralize(processo.errors.count, "erro(s)") %> encontrado(s):
            </h6>
            <ul>
                <% processo.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <h4>Conta de Liquidação</h4>
    <hr>
    <div class="row">
        <div class="col-xs-8">
            <div class="row">
                <div class="col-xs-2">
                    <div class="form-group">
                        <%= f.label :data_distribuicao %>
                        <%= f.text_field :data_distribuicao,
                            class: "form-control calendario", placeholder: "__/__/__" %>
                    </div>
                </div>
                <div class="col-xs-6">
                    <%= f.input :forum%>
                </div>
                <div class="col-xs-2">
                    <%= f.input :vara %>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <%= f.input :tipo_processo %>
                </div>
                <div class="col-xs-2">
                    <div class="form-group ">
                        <%= f.label :data_citacao %>
                        <%= f.text_field :data_citacao,
                            class: "form-control calendario", placeholder: "__/__/__" %>
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        <%= f.label :data_base %>
                        <%= f.text_field :data_base,
                            class: "form-control calendario",
                            placeholder: "__/__/__"  %>
                    </div>
                </div>
                <div class="col-xs-3">
                    <label>Índice da Data Base</label>
                    <h6>58,570367</h6>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2">
                    <%= f.input :sentenca %>
                </div>
                <div class="col-xs-2">
                    <%= f.input :acordao %>
                </div>
                <div class="col-xs-6">
                    <%= f.input :numero %>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2">
                    <div class="form-group">
                        <%= f.label :tabela_atualizacao_id %>
                        <%= f.collection_select :tabela_atualizacao_id,
                        TabelaAtualizacao.all, :id, :nome,
                        {:include_blank => false}, {:class => 'form-control'} %>
                    </div>
                </div>
                <div class="col-xs-8">
                    <%= f.input :processo_autor %>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-7 ">
                    <%= f.input :re %>
                </div>
                <div class="col-xs-3">
                    <div class="pull-left width-percent-45">
                        <%= f.label :cbpm_ipesp_id %>
                        <%= f.collection_select :cbpm_ipesp_id,
                        CbpmIpesp.all, :id, :nome,
                        {:include_blank => false},
                        {:class => 'form-control '} %>
                    </div>
                    <div class="pull-right width-percent-45 ">
                        <label>%</label>
                        <%= f.text_field :data_base,
                        class: "form-control  pull-left",
                            placeholder: "Valor %" %>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xs-2">
                    <div class="form-group">
                        <%= f.label :juros %>
                        <div>
                            <%= f.text_field :juros,
                                class: "form-control width-percent-45 pull-left" %>
                            <%= f.collection_select :tipo_juro_id,
                            TipoJuro.all, :id, :nome,
                            {:include_blank => false},
                            {:class => 'form-control width-percent-45 pull-left margin-left-5'} %>
                        </div>
                    </div>
                </div>
                <div class="col-xs-3">
                    <div class="form-group">
                        <div class="pull-left width-percent-45">
                            <%= f.label :cruz_iamspe_id %>
                            <%= f.collection_select :cruz_iamspe_id,
                            CruzIamspe.all, :id, :nome,
                            {:include_blank => false},
                            {:class => 'form-control  pull-left'} %>

                        </div>
                        <div class="pull-right width-percent-45">
                            <label>%</label>
                            <%= f.text_field :cruz_iamspe_valor,
                                class: "form-control  pull-left",
                                placeholder: "Valor %" %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row bg-custom-warning width-percent-90">
                <div class="col-xs-6 col-xs-offset-7">
                    <div class="form-group margin-left-35">
                        <%= f.label :base_calculo_autor %>
                        <%= f.text_field :base_calculo_autor,
                        class: "form-control width-percent-50" %>
                    </div>
                </div>
            </div>
            <div class="row bg-custom-warning width-percent-90">
                <div class="col-xs-6 col-xs-offset-7">
                    <div class="form-group margin-left-35">
                        <label>Período</label>
                        <div>
                            <%= f.text_field :periodo_inicial,
                            class: "form-control calendario width-percent-30 pull-left",
                                 placeholder: "__/__/__"  %>
                            <%= f.text_field :periodo_final,
                            class: "form-control calendario width-percent-30 pull-left margin-left-22",
                                placeholder: "__/__/__" %>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row width-percent-85">
                <br>
                <div class="actions pull-right">
                    <%= f.submit 'Gerar Pagamentos', :class => "btn bg-custom-primary" %>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="panel panel-default panel-autor">
              <div class="panel-heading">
                <h6 class="panel-title">
                    <strong>Inserir Autores</strong>
                </h6>
              </div>
              <div class="panel-body">
                  <% @processo.autors.build %>
                  <div id="autors">
                      <%= f.simple_fields_for :autors do |a| %>
                          <%= render 'autor_fields', :f => a %>
                              <%= link_to_add_association "Adicionar", f, :autors,
                                    :class => "btn btn-success pull-right btn-xs btn-add-autor" %>
                          </div>
                      <% end %>

              </div>
            </div>
        </div>
    </div>

<% end %>

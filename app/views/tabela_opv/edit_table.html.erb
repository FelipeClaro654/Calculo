<div class="row">
    <button data-tabela="opv"
            class="add-ano btn bg-custom-primary pull-left margin-left-15 neg-margin-top-46"
            type="button"
            name="button"
            title="Adicionar ano">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar ano
    </button>
</div>
<div class="month-container">
